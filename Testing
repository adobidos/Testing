local runService = game:GetService("RunService") local workspace = game.Workspace local function fireBullet(ray) local hitPart = workspace:Raycast(ray.Origin, ray.Direction, math.inf, RaycastFilterType.BlacklistCharacters) if hitPart then local hitPlayer = hitPart.Parent:FindFirstChild("Humanoid") if hitPlayer then -- Check if it hit a player -- Do something when it hits a player, like dealing damage print("Hit player!") end end end runService.Heartbeat:Connect(function() local ray = Ray.new(workspace.CurrentCamera.Position, workspace.CurrentCamera.LookVector * 1500) -- Adjust distance as needed fireBullet(ray) end)
